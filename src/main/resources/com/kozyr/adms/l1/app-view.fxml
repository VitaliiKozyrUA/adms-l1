<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="535.0" prefWidth="546.0" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kozyr.adms.l1.ui.AppController">
   <HBox spacing="10.0" VBox.vgrow="NEVER" />
   <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="NEVER">
      <children>
         <CheckBox fx:id="screenProtocolCheckbox" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="на екран" />
         <CheckBox fx:id="fileProtocolCheckbox" layoutX="221.0" layoutY="10.0" mnemonicParsing="false" text="в файл" />
         <Button mnemonicParsing="false" onAction="#onGenerateProtocolButtonAction" text="Підготувати протокол" />
      </children>
   </HBox>
   <HBox prefWidth="200.0" spacing="10.0" VBox.vgrow="ALWAYS">
      <children>
         <VBox prefWidth="100.0" spacing="10.0" HBox.hgrow="ALWAYS">
            <children>
               <HBox alignment="CENTER_LEFT" spacing="5.0" VBox.vgrow="SOMETIMES">
                  <children>
                     <Label alignment="CENTER_LEFT" contentDisplay="TOP" text="Z =" HBox.hgrow="NEVER" />
                     <TextField fx:id="matrixTargetFunctionTextField" HBox.hgrow="ALWAYS" />
                  </children>
               </HBox>
               <HBox spacing="10.0" VBox.vgrow="ALWAYS">
                  <children>
                     <VBox HBox.hgrow="ALWAYS">
                        <children>
                           <Label text="Обмеження:" />
                           <TextArea fx:id="soleSolutionSetTextArea" />
                        </children></VBox>
                  </children>
               </HBox>
            </children>
         </VBox>
         <VBox prefWidth="100.0" spacing="10.0" HBox.hgrow="ALWAYS">
            <children>
               <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="NEVER">
                  <children>
                     <RadioButton fx:id="minRadioButton" mnemonicParsing="false" prefWidth="100.0" text="min" />
                     <RadioButton fx:id="maxRadioButton" mnemonicParsing="false" prefWidth="100.0" text="max" />
                     <Button mnemonicParsing="false" onAction="#onExampleButtonAction" prefWidth="200.0" text="Приклад" />
                  </children>
               </HBox>
               <HBox alignment="CENTER_LEFT" spacing="10.0">
                  <children>
                     <Label text="Кількість змінних" />
                     <Spinner fx:id="variableCountSpinner" prefWidth="70.0" />
                  </children>
               </HBox>
               <Button mnemonicParsing="false" onAction="#onFindOptimalSolutionAction" prefWidth="300.0" text="Знайти оптимальний розв'язок" VBox.vgrow="ALWAYS" />
               <HBox alignment="CENTER_LEFT" VBox.vgrow="NEVER">
                  <children>
                     <Label prefWidth="100.0" text="X =" />
                     <TextField prefWidth="300.0" fx:id="xTextField" />
                  </children>
               </HBox>
               <HBox alignment="CENTER_LEFT" VBox.vgrow="NEVER">
                  <children>
                     <Label prefWidth="100.0" text="Z =" />
                     <TextField fx:id="zTextField" prefWidth="300.0" />
                  </children>
               </HBox>
            </children>
         </VBox>
      </children></HBox>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
